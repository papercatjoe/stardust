{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2020",
    "lib": ["ES6"],
    "module": "ES2020",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["./**/*.ts", "./.eslintrc.cjs"],
  "exclude": ["node_modules"]
}
