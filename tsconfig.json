{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts", "./.eslintrc.cjs"],
  "exclude": ["node_modules"]
}
