{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "lib": ["ES6"],
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["./src/**/*"]
}
